script#team-settings-template(type="text/x-template")
  .modal
    .modal-header
    .modal-content
      h2 Team Settings
      table
        tr
          th Logo
          td: img.logo(:src="team.logo")
        tr
          th ID
          td: input(v-model="team.id", type="number")
        tr
          th Name
          td: input(v-model="team.name")
        tr
          th Founder
          td: input(v-model="team.founder")
        tr
          th URL
          td: input(v-model="team.url")
        tr
          th Email
          td: input(v-model="team.email")
          td
            button
              .fa.fa-plus
              | Found New Team

    .modal-footer
      button(@click="$emit('close')")
        .fa.fa-times
        | Cancel

      button(@click="$emit('close')")
        .fa.fa-floppy-o
        | Save
