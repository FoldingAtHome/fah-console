script#fah-client-template(type="text/x-template")
  .fah-client
    table.units
      tr
        th.actions: .fa.fa-cog(@click="open_dialog('settings')")
        th.cpus CPUs
        th.project Project
        th.rcg Unit
        th.progress Progress
        th.eta ETA
        th.points Points
        th.ppd PPD

      work-unit(v-for="unit in units", :unit="unit", @pause="pause")

    client-settings(v-if="show.settings", @close="close_dialog()",
      @save="save_settings()", :config="data.config", :info="data.info")
