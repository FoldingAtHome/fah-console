#header
  text-align center

  .header-nav
    position absolute
    right 2em
    top 1em
    text-align right
    z-index 222

    .avatar
      width 40px
      height 40px
      border-radius 4px

    .nav-notch
      display none
      border-top 1px solid border-color
      border-left 1px solid border-color
      background #000
      transform rotate(45deg)
      height 16px
      width 16px
      margin 5px 12px -8px auto
      border-top-left-radius 4px

    a
      display none
      border-left 1px solid border-color
      border-right 1px solid border-color
      padding 0.5em 1em
      text-align left
      background #000
      text-shadow 0 0 16px #0ff
      font-weight bold

      .fa
        width 1.25em
        text-align center

      &:first-of-type
        border-top-left-radius 4px
        border-top-right-radius 4px
        border-top 1px solid border-color

      &:last-child
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px
        border-bottom 1px solid border-color

      &:hover
        text-shadow none
        color #fff
        display block
        text-decoration none

    &:hover
      a, .nav-notch
        display block

  .logo
    display inline-block
    font-size 26pt
    font-family "Trebuchet MS", Helvetica, sans-serif
    color header-color
    text-transform capitalize

    span
      font-size 90%
      font-family sans-serif
      color #fe0200


    &:hover
      text-decoration none
