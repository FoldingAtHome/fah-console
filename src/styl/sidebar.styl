.sidebar.left
  div.account, div.team
    clear both
    margin-bottom 15px
    text-align center
    padding 5px

    .name
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

.sidebar.right
  > div
    position relative
    width 270px
    margin-bottom 10px
    overflow-x hidden

  table
    font-size 80%

  th, td
    &.points, &.wus, &.cpus, &.gpus, &.last, &.time, &.project
      text-align right

    &.bonus, &.os, &.active
      text-align center

    &.project
      cursor pointer

      &:hover
        text-decoration underline

  td.highlight
    color highlight
