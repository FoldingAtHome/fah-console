.view
  flex-direction column
  position relative
  display flex
  margin-top 2em

  input.number
    width 5em
    text-align right

  .title, .subtitle
    text-align center
    font-size 160%
    text-transform capitalize
    margin 0.5em 0 0.5em 0
    width 100%

  .subtitle
    font-size 120%
    margin-top 0.25em

  .query-options
    text-align center
    margin 0.5em 0

    > span
      margin-right 1em

      &:last-child
        margin-right 0

  .menu
    text-align center

.loading
  margin 3em
  text-align center
  font-size 300%
  text-shadow 0 0 32px #0ff

.view
  .chart
    max-width 1000px
    width 95%
    margin auto

    &.team, &.account
      tr
        cursor pointer

    canvas
      max-height 80vh

    .chart-legend
      .show
        width 48px
        height 24px
        line-height 24px
        text-align center
        color #222
        cursor pointer

.team-view, .account-view
  display flex
  flex-direction column
  align-items flex-start

  .content
    width 100%
    display flex
    flex-direction row
    align-items flex-start

    > div
      padding 0 1em

    .middle
      margin-top 1em
      flex 1

.team-sidebar, .account-sidebar
  max-width 250px

  th
    text-align left

  td
    text-align right
    text-overflow ellipsis
    overflow hidden
    max-width 150px

    &.active
      color highlight

  .avatar
    width 64px
    margin 5px auto

    img
      width 64px
      height 64px
      border-radius 4px

    .fa
      font-size 64px

.main-view
  text-align center

  a
    display block
    padding 0.75em 1em
    margin 0.5em auto
    border 2px solid border-color
    border-top-right-radius 20px
    border-bottom-left-radius 20px
    width 14em
    text-shadow 0 0 16px #0ff
    text-align left
    font-size 18pt

    &:hover
      text-shadow none
      text-decoration none
      border-color text-color
      box-shadow 2px 2px 6px #0bb

    .fa
      width 1.25em
      text-align center

.account-settings-view, .team-settings-view
  p
    max-width 30em
    margin 0 auto 2em auto

  form
    display grid
    grid-template-columns 12em auto auto
    grid-gap 0.75em
    justify-content center

    label
      font-weight bold
      text-align right

    input, input.number
      width 24em
      text-align left

    .actions
      text-align right

    .avatar
      width 96px
      height 96px

    .actions .fa
      font-size 16pt
      cursor pointer

      &:hover
         color #fff

.about-view
  max-width 30em
  margin-left auto
  margin-right auto
