.modal
  z-index 110
  position fixed
  top modal-margin
  bottom modal-margin
  left modal-margin
  right modal-margin
  background alpha(bg-color, 0.8)
  border 1px solid border-color
  padding 20px
  overflow hidden
  display flex
  flex-direction column

  .modal-header
    flex none

  .modal-content
    flex auto

  .modal-footer
    flex none
    text-align right
    position relative
    bottom 0

  &.message
    top 50%
    bottom inherit
    left 50%
    right inherit
    width 400px
    height 300px
    margin-left -200px
    margin-top -150px

    .modal-content
      overflow-y auto

.overlay
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 100
  opacity 0.8
  background bg-color
